<% if has_link_to_resource? %>
  <div class="card__footer">
    <div class="card__support">
      <% if has_actions? %>
        <% if !current_settings.votes_hidden? %>
          <%= cell(
            "decidim/progress_bar",
            progress_bar_progress,
            total: progress_bar_total,
            units_name: "decidim.ideas.ideas.votes_count.count",
            element_id: "idea-#{model.id}-votes-count",
            subtitle_text: progress_bar_subtitle_text,
            small: true
          ) %>
        <% end %>
        <%= render partial: "decidim/ideas/ideas/vote_button.html", locals: { idea: model, from_ideas_list: true } %>
      <% elsif has_footer? %>
        <div class="card__support__data"></div>
        <%= link_to t("decidim.ideas.ideas.idea.view_idea"), resource_path, class: "card__button button--sc light button small secondary" %>
      <% end %>
    </div>
  </div>
<% end %>
