<div class="ideas-picker-item" data-idea-id="<%= idea.id %>">
  <div class="ideas-picker-item-details">
    <div class="ideas-picker-item-title"><%= presenter_for(idea).id_and_title(html_escape: true) %></div>
    <div class="ideas-picker-item-info">
      <ul class="no-bullet">
        <li><%= presenter_for(idea).area_scope_name %></li>
        <li><%= presenter_for(idea).category_name %></li>
        <li><%= presenter_for(idea).published_date %></li>
      </ul>
    </div>
  </div>
  <div class="ideas-picker-item-controls">
    <div class="idea-picker-item-remove" tabindex="0">
      <%= t(".remove_idea") %>
    </div>
  </div>
</div>
